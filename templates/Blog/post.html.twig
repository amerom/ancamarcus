{% extends 'base.html.twig' %}



{% block body %}
    {% include 'CommonElements/_slider_css.html.twig' %}
    <div class="section">
        <div class="container project-page">
            <div class="white-box center">
                <div class="row">

                    <div class="col-md-2"></div>
                    <div class="col-md-8">
                        <div class="post-content" style="background-color: #FFFFFF; padding: 20px;">
                            <h5 style="text-align: center;">{{ post.createdAt|date('M d, Y @ H:i A') }} by <span>{{ post.author.name }}</span></h5>
                            <h4 style="text-align: center;">{{ post.description }}</h4>
                            {{ post.body|raw }}
                        </div>
                    </div>
                    <div class="col-md-2"></div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
