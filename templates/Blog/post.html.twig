{% extends 'base.html.twig' %}

{% block header %}

    <div class="title title-trainer">
        <div class="container">
            <h3>{{ post.title }}</h3>
        </div>
    </div>

{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="post-content" style="background-color: #FFFFFF; padding: 40px;">
                {{ post.body }}
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
{% endblock %}
