{% extends 'base.html.twig' %}

{% block header %}

    <div class="title title-trainer">
        <div class="container">
            <h1>Blog</h1>
        </div>
    </div>

{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h3>Recent posts...</h3>
            <section class="articles" style="background-color: #FFFFFF; padding-left: 20px; padding-right: 20px;">
                {% for post in posts if posts is not empty %}
                    <h4><a href="{{ path('blog_post', { slug: post.slug }) }}">{{ post.title }}</a></h4>
                    <small>by {{ post.author.name }} on {{ post.createdAt|date('M d, Y H:i A') }}</small>
                    <p style="margin-top:10px;">{{ post.description }}</p>
                {% endfor %}
            </section>
        </div>
        <div class="col-md-2"></div>
    </div>
{% endblock %}
